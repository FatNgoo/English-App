<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_beige">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_button_circle_white"
                    android:contentDescription="Back"
                    android:elevation="4dp"
                    android:src="@drawable/ic_back_arrow" />

                <!-- Title -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detective Bureau"
                        android:textColor="#8B6F47"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find the hidden objects!"
                        android:textColor="#A0826D"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Detective Hat Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Detective"
                    android:src="@drawable/ic_detective_hat" />
            </RelativeLayout>

            <!-- Mission Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/missionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:elevation="8dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_mission_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Mission Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find this item:"
                        android:textColor="#8B6F47"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Target Word Card -->
                    <LinearLayout
                        android:id="@+id/targetWordContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        android:background="@drawable/bg_target_word"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp">

                        <!-- Target Object Image -->
                        <ImageView
                            android:id="@+id/imgTargetObject"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="Target object"
                            android:src="@drawable/ic_target_object_apple" />

                        <!-- Target Word Text -->
                        <TextView
                            android:id="@+id/txtTargetWord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="apple"
                            android:textColor="#FF6B6B"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <!-- Play Pronunciation Button -->
                        <ImageButton
                            android:id="@+id/btnPronunciation"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/bg_speaker_button"
                            android:contentDescription="Play pronunciation"
                            android:elevation="4dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_speaker" />
                    </LinearLayout>

                    <!-- Difficulty Badge -->
                    <TextView
                        android:id="@+id/txtDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_difficulty_easy"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:text="Easy"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Main Scene Container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginVertical="12dp">

                <!-- Scene Frame -->
                <FrameLayout
                    android:id="@+id/sceneContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="80dp"
                    android:background="@drawable/bg_scene_frame"
                    android:elevation="6dp"
                    android:padding="8dp">

                    <!-- Interactive Scene ImageView with zoom/pinch support -->
                    <ImageView
                        android:id="@+id/imgScene"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Hidden object scene"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_scene_placeholder" />

                    <!-- Glow Effect Overlay (for hints) -->
                    <FrameLayout
                        android:id="@+id/glowOverlay"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/bg_object_glow"
                        android:elevation="2dp"
                        android:visibility="invisible" />

                    <!-- Correct Tap Feedback -->
                    <ImageView
                        android:id="@+id/imgCorrectFeedback"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:contentDescription="Correct"
                        android:elevation="10dp"
                        android:src="@drawable/ic_correct_check"
                        android:visibility="invisible" />

                    <!-- Wrong Tap Feedback -->
                    <ImageView
                        android:id="@+id/imgWrongFeedback"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:contentDescription="Wrong"
                        android:elevation="10dp"
                        android:src="@drawable/ic_wrong_x"
                        android:visibility="invisible" />

                    <!-- Sparkles Overlay -->
                    <ImageView
                        android:id="@+id/imgSparkles1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Sparkle"
                        android:elevation="12dp"
                        android:src="@drawable/ic_sparkle"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/imgSparkles2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="Sparkle"
                        android:elevation="12dp"
                        android:src="@drawable/ic_sparkle"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/imgSparkles3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="Sparkle"
                        android:elevation="12dp"
                        android:src="@drawable/ic_sparkle"
                        android:visibility="invisible" />

                    <!-- Great Job Text Animation -->
                    <TextView
                        android:id="@+id/txtGreatJob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="15dp"
                        android:text="Great job! ðŸŽ‰"
                        android:textColor="#4CAF50"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </FrameLayout>

                <!-- Hint Tools (Floating on Right Side) -->
                <LinearLayout
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Hint Button (Lightbulb) -->
                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="16dp">

                        <ImageButton
                            android:id="@+id/btnHint"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_hint_button"
                            android:contentDescription="Hint"
                            android:elevation="8dp"
                            android:padding="12dp"
                            android:src="@drawable/ic_lightbulb" />
                    </FrameLayout>

                    <!-- Zoom Button (Magnifying Glass) -->
                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="16dp">

                        <ImageButton
                            android:id="@+id/btnZoom"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_zoom_button"
                            android:contentDescription="Zoom"
                            android:elevation="8dp"
                            android:padding="12dp"
                            android:src="@drawable/ic_magnifying_glass" />
                    </FrameLayout>

                    <!-- Speaker Button (Replay pronunciation) -->
                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp">

                        <ImageButton
                            android:id="@+id/btnReplayWord"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_speaker_button"
                            android:contentDescription="Replay word"
                            android:elevation="8dp"
                            android:padding="12dp"
                            android:src="@drawable/ic_speaker" />
                    </FrameLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Progress Bar / Find List -->
            <androidx.cardview.widget.CardView
                android:id="@+id/progressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Progress Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Find Progress"
                        android:textColor="#5D4E37"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Progress Items (for multi-object mode) -->
                    <LinearLayout
                        android:id="@+id/progressItemsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Progress Item 1 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp">

                                <ImageView
                                    android:id="@+id/progressItem1Bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_progress_item"
                                    android:contentDescription="Item 1" />

                                <ImageView
                                    android:id="@+id/progressItem1Icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_target_object_apple" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="apple"
                                android:textColor="#666666"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Progress Item 2 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp">

                                <ImageView
                                    android:id="@+id/progressItem2Bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_progress_item"
                                    android:contentDescription="Item 2" />

                                <ImageView
                                    android:id="@+id/progressItem2Icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_star" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="ball"
                                android:textColor="#666666"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Progress Item 3 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp">

                                <ImageView
                                    android:id="@+id/progressItem3Bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_progress_item"
                                    android:contentDescription="Item 3" />

                                <ImageView
                                    android:id="@+id/progressItem3Icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_coin" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="pencil"
                                android:textColor="#666666"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Single Item Progress Text -->
                    <TextView
                        android:id="@+id/txtSingleProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/1 Found"
                        android:textColor="#4CAF50"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Timer & Score Badges (Optional Challenge Mode) -->
            <LinearLayout
                android:id="@+id/challengeInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <!-- Timer Badge -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_timer_badge"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Timer"
                        android:src="@drawable/ic_timer" />

                    <TextView
                        android:id="@+id/txtTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1:30"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Score Badge -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_score_badge"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Score"
                        android:src="@drawable/ic_coin" />

                    <TextView
                        android:id="@+id/txtScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+50"
                        android:textColor="#5D4E37"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Reading Assistant Button -->
            <LinearLayout
                android:id="@+id/btnReadAloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:background="@drawable/bg_read_aloud_button"
                android:clickable="true"
                android:elevation="6dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Microphone"
                    android:src="@drawable/ic_microphone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read the word aloud"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Success Popup Overlay -->
    <FrameLayout
        android:id="@+id/successOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0FFFFFF"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="24dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_success_popup"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Confetti Animation -->
                <ImageView
                    android:id="@+id/imgConfetti"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Confetti"
                    android:src="@drawable/ic_confetti" />

                <!-- Success Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="You found it!"
                    android:textColor="#2E7D32"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <!-- Success Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Great detective work! ðŸ”"
                    android:textColor="#5D4E37"
                    android:textSize="16sp" />

                <!-- Detective Badge Reward -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="Detective badge"
                    android:src="@drawable/ic_detective_badge" />

                <!-- Rewards Info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Star"
                        android:src="@drawable/ic_star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+100 XP"
                        android:textColor="#4CAF50"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Coin"
                        android:src="@drawable/ic_coin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+30"
                        android:textColor="#FFD93D"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Replay Button -->
                    <LinearLayout
                        android:id="@+id/btnReplay"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_replay_button"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Replay"
                            android:src="@drawable/ic_replay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Replay"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Next Mystery Button -->
                    <LinearLayout
                        android:id="@+id/btnNextMystery"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_next_button"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Next"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Next"
                            android:src="@drawable/ic_next_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Saga Map -->
        <LinearLayout
            android:id="@+id/navSagaMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Map"
                android:src="@drawable/ic_map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Map"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Games (Detective Bureau - Highlighted) -->
        <LinearLayout
            android:id="@+id/navGames"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Games"
                android:src="@drawable/ic_magnifying_glass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Games"
                android:textColor="#42A5F5"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Favorites -->
        <LinearLayout
            android:id="@+id/navFavorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Favorites"
                android:src="@drawable/ic_heart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Favorites"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Profile"
                android:src="@drawable/ic_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
