<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with AI Buddy Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:background="@color/primary_yellow">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_robot_happy"
                    android:padding="8dp"
                    android:background="@drawable/bg_tool_button"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Buddy Chat"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tvBuddyStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online â€¢ Ready to chat"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_robot"
                    android:padding="8dp"/>
            </LinearLayout>

            <!-- Scenario Selector -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="Choose a Scenario"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Zoo Scenario -->
                    <LinearLayout
                        android:id="@+id/cardZoo"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_scenario_selected"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_zoo"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Zoo"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Supermarket Scenario -->
                    <LinearLayout
                        android:id="@+id/cardSupermarket"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_scenario_card"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_supermarket"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Market"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- School Scenario -->
                    <LinearLayout
                        android:id="@+id/cardSchool"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_scenario_card"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_school"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="School"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Daily Life Scenario -->
                    <LinearLayout
                        android:id="@+id/cardDaily"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_scenario_card"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_conversation"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Daily"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Chat Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conversation"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp"/>

                <!-- Chat Container -->
                <ScrollView
                    android:id="@+id/chatScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:id="@+id/chatContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                        <!-- AI Welcome Message -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_robot_happy"
                                android:padding="8dp"
                                android:background="@drawable/bg_tool_button"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:padding="12dp"
                                android:text="Hi! I'm your AI Buddy. Let's explore the zoo together! What do you see?"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:background="@drawable/bg_chat_ai"
                                android:maxWidth="250dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <!-- Response Options -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="Choose your response:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnOption1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        android:text="I see a big elephant"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/bg_toggle_switch"
                        android:textAllCaps="false"
                        android:gravity="start|center_vertical"/>

                    <Button
                        android:id="@+id/btnOption2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        android:text="There are monkeys playing"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/bg_toggle_switch"
                        android:textAllCaps="false"
                        android:gravity="start|center_vertical"/>

                    <Button
                        android:id="@+id/btnOption3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="A lion is sleeping"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/bg_toggle_switch"
                        android:textAllCaps="false"
                        android:gravity="start|center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Voice Input Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/micButtonFrame"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:id="@+id/btnVoiceInput"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mic_wave"
                        android:background="@drawable/bg_mic_button"
                        android:scaleType="centerInside"
                        android:padding="20dp"
                        android:contentDescription="Voice Input"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/micButtonFrame"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="Tap to speak"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"/>
            </RelativeLayout>

            <!-- Learning Tools -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_card_white"
                android:elevation="4dp">

                <LinearLayout
                    android:id="@+id/btnVocab"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_book"
                        android:padding="8dp"
                        android:background="@drawable/bg_tool_button"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Vocab"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnHint"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_lightbulb"
                        android:padding="8dp"
                        android:background="@drawable/bg_tool_button"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Hint"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSlowMode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_turtle"
                        android:padding="8dp"
                        android:background="@drawable/bg_tool_button"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Slow"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:menu="@menu/bottom_navigation_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
