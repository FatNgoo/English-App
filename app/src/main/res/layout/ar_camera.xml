<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Camera Preview Container -->
    <FrameLayout
        android:id="@+id/cameraContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Camera TextureView for live feed -->
        <TextureView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true"/>

        <!-- Top gradient mask for header readability -->
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:background="@drawable/bg_gradient_top"/>

        <!-- Bottom gradient mask for controls readability -->
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_gradient_bottom"/>

    </FrameLayout>

    <!-- Top Header Overlay -->
    <RelativeLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="16dp">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_flash_toggle"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                android:tint="@android:color/white"/>

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ar_camera_title"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <!-- Flash Toggle Button -->
        <FrameLayout
            android:id="@+id/btnFlash"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_flash_toggle"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgFlash"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_flash"
                android:tint="#FFD93D"/>

        </FrameLayout>

    </RelativeLayout>

    <!-- Scan Frame & Detection Area -->
    <FrameLayout
        android:id="@+id/scanFrameContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center">

        <!-- Scan Frame Border -->
        <View
            android:id="@+id/scanFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_scan_frame"/>

        <!-- Corner Markers -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|top"
            android:src="@drawable/ic_scan_corners"
            android:tint="#64B5F6"/>

        <!-- Scanning Effect Overlay -->
        <FrameLayout
            android:id="@+id/scanningOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Scanning Grid -->
            <ImageView
                android:id="@+id/scanGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_scan_grid"
                android:alpha="0.3"/>

            <!-- Scanning Ray -->
            <View
                android:id="@+id/scanRay"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/ic_scan_ray"
                android:visibility="gone"/>

            <!-- Sparkle Particles Container -->
            <FrameLayout
                android:id="@+id/sparkleContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/sparkle1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_sparkle_particle"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/sparkle2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_sparkle_particle"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/sparkle3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_sparkle_particle"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/sparkle4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_sparkle_particle"
                    android:visibility="gone"/>

            </FrameLayout>

        </FrameLayout>

        <!-- Hint Text Below Frame -->
        <TextView
            android:id="@+id/txtHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/point_at_object"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"/>

    </FrameLayout>

    <!-- Word Bubbles Container (dynamically populated) -->
    <FrameLayout
        android:id="@+id/wordBubblesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"/>

    <!-- 3D Word Bubble Template (hidden by default) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/wordBubbleTemplate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Word Text -->
            <TextView
                android:id="@+id/txtWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chair"
                android:textSize="32sp"
                android:textColor="#212121"
                android:textStyle="bold"/>

            <!-- Pronunciation Badge -->
            <TextView
                android:id="@+id/txtPronunciation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="/tʃeə(r)/"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:background="@drawable/bg_object_tag"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>

            <!-- Audio Play Button -->
            <FrameLayout
                android:id="@+id/btnAudio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_practice_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_audio_play"
                    android:tint="@android:color/white"/>

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Object Tags Container (for multiple objects) -->
    <FrameLayout
        android:id="@+id/objectTagsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"/>

    <!-- Object Tag Template (hidden by default) -->
    <LinearLayout
        android:id="@+id/objectTagTemplate"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_object_tag"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/txtTagWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="table"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Shutter Button -->
    <FrameLayout
        android:id="@+id/btnShutter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_shutter_button"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera"
            android:tint="@android:color/white"/>

        <!-- Outer Ring for Pulse Animation -->
        <View
            android:id="@+id/shutterRing"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_scan_frame"
            android:alpha="0"
            android:visibility="gone"/>

    </FrameLayout>

    <!-- Snapshot Preview Popup Overlay -->
    <FrameLayout
        android:id="@+id/snapshotOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:visibility="gone"
        android:clickable="true">

        <!-- Preview Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="480dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- Captured Photo Thumbnail -->
                <ImageView
                    android:id="@+id/imgSnapshot"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_photo_preview"/>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <!-- Save Button -->
                    <FrameLayout
                        android:id="@+id/btnSaveAlbum"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.2"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_save_album_button"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_album"
                                android:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/save"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </FrameLayout>

                    <!-- Retry Button -->
                    <FrameLayout
                        android:id="@+id/btnRetry"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.9"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_retry_button"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_retry"
                            android:tint="@android:color/white"/>

                    </FrameLayout>

                    <!-- Share Button -->
                    <FrameLayout
                        android:id="@+id/btnShare"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.9"
                        android:background="@drawable/bg_save_album_button"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_share"
                            android:tint="@android:color/white"/>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:visibility="gone"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Spinning Magic Lens -->
            <ImageView
                android:id="@+id/imgLoadingScan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_loading_scan"/>

            <!-- Loading Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/scanning"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textStyle="bold"/>

        </LinearLayout>

    </FrameLayout>

    <!-- Not Found State Bubble -->
    <androidx.cardview.widget.CardView
        android:id="@+id/notFoundBubble"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Confused Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_ar_quiz"
                android:tint="#FFB74D"/>

            <!-- Message Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/hmm_try_again"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- Hint Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/move_closer"
                android:textSize="12sp"
                android:textColor="#757575"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- AR Quiz Floating Button -->
    <FrameLayout
        android:id="@+id/btnArQuiz"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_ar_quiz_button"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_ar_quiz"
                android:tint="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/play_quiz"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </FrameLayout>

    <!-- AR Quiz Popup Overlay -->
    <FrameLayout
        android:id="@+id/quizOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true">

        <!-- Quiz Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Quiz Question -->
                <TextView
                    android:id="@+id/txtQuizQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/which_one_is"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <!-- Timer Bar -->
                <ProgressBar
                    android:id="@+id/quizTimer"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/bg_retry_button"
                    android:max="10"/>

                <!-- Instructions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tap_correct_object"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- History Slide-up Panel (Bottom Sheet) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/historyBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_history_panel"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="0dp"
        app:behavior_hideable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Swipe Handle -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_object_tag"/>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_scans"
                android:textSize="20sp"
                android:textColor="#212121"
                android:textStyle="bold"/>

            <!-- History RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav"
        android:elevation="8dp"
        android:weightSum="5">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home"
                android:tint="#9E9E9E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/home"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>

        </LinearLayout>

        <!-- Map -->
        <LinearLayout
            android:id="@+id/navMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_map"
                android:tint="#9E9E9E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/map"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>

        </LinearLayout>

        <!-- Games -->
        <LinearLayout
            android:id="@+id/navGames"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_games"
                android:tint="#9E9E9E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/games"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>

        </LinearLayout>

        <!-- AR Camera (Highlighted) -->
        <LinearLayout
            android:id="@+id/navArCamera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_ar_lens"
                android:tint="#64B5F6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/ar_camera"
                android:textSize="12sp"
                android:textColor="#64B5F6"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                android:tint="#9E9E9E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/profile"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
