<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_purple">

    <!-- Matchmaking Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Finding Opponent Text -->
        <TextView
            android:id="@+id/txtMatchmakingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finding_opponent"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"/>

        <!-- Loading Dots -->
        <TextView
            android:id="@+id/txtLoadingDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="..."
            android:textSize="32sp"
            android:textColor="@android:color/white"/>

        <!-- Avatar Slots Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="40dp">

            <!-- Player Avatar Slot -->
            <LinearLayout
                android:id="@+id/playerSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/imgPlayerAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_avatar_girl"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtPlayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Jenny"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtPlayerLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Level 12"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"/>

            </LinearLayout>

            <!-- VS Lightning Icon -->
            <ImageView
                android:id="@+id/imgVSLightning"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_vs_lightning"/>

            <!-- Opponent Avatar Slot -->
            <LinearLayout
                android:id="@+id/opponentSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#757575">

                        <ImageView
                            android:id="@+id/imgOpponentAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_avatar_boy"
                            android:scaleType="centerCrop"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/txtOpponentPlaceholder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="???"
                            android:textSize="32sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtOpponentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="???"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtOpponentLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Level ???"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- Matchmaking Spinner -->
        <ImageView
            android:id="@+id/imgMatchmakingSpinner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_arena"/>

    </LinearLayout>

    <!-- Countdown Overlay (Initially Hidden) -->
    <FrameLayout
        android:id="@+id/countdownOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="3"
            android:textSize="120sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="10"/>

    </FrameLayout>

    <!-- Cancel Button -->
    <FrameLayout
        android:id="@+id/btnCancel"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_leave_button"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cancel"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </FrameLayout>

</RelativeLayout>
