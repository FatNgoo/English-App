<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="160dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/primary_green">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back"
                    android:background="@drawable/bg_tool_button"
                    android:padding="12dp"
                    android:contentDescription="Back button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Writing Dojo"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_ninja_pencil"
                    android:padding="8dp"
                    android:background="@drawable/bg_tool_button"/>
            </RelativeLayout>

            <!-- Instruction Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F0F8FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trace the letter below!"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Follow the stroke order with your finger."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp"/>

                    <!-- Big Preview Letter -->
                    <TextView
                        android:id="@+id/tvPreviewLetter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textSize="120sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvDifficultyLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Difficulty: Easy"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_reward_bar"
                            android:padding="8dp"
                            android:layout_marginEnd="12dp"/>

                        <ImageButton
                            android:id="@+id/btnPlayPronunciation"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_speaker"
                            android:background="@drawable/bg_utility_button"
                            android:padding="12dp"
                            android:contentDescription="Play pronunciation"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Handwriting Pad Area -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <!-- Main Tracing Canvas -->
                <FrameLayout
                    android:id="@+id/tracingPadContainer"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/bg_notebook_paper"
                    android:elevation="4dp">

                    <!-- Handwriting guide lines -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="50dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="100dp"
                        android:paddingBottom="100dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/bg_dotted_line"
                            android:layout_marginBottom="65dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#95C8F0"
                            android:layout_marginBottom="65dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/bg_dotted_line"/>
                    </LinearLayout>

                    <!-- Letter outline template -->
                    <TextView
                        android:id="@+id/tvLetterOutline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A"
                        android:textSize="280sp"
                        android:textStyle="bold"
                        android:textColor="#E0E0E0"
                        android:gravity="center"
                        android:alpha="0.3"/>

                    <!-- Custom Drawing Canvas View -->
                    <View
                        android:id="@+id/tracingCanvas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <!-- Sparkles overlay (hidden initially) -->
                    <ImageView
                        android:id="@+id/imgSparkles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_confetti"
                        android:visibility="gone"
                        android:alpha="0"/>
                </FrameLayout>

                <!-- Utility Buttons (Floating) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btnReplayStroke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_replay"
                            android:padding="12dp"
                            android:background="@drawable/bg_utility_button"
                            android:elevation="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnShowStrokeOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_hand_guide"
                            android:padding="12dp"
                            android:background="@drawable/bg_utility_button"
                            android:elevation="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnErase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_eraser"
                            android:padding="12dp"
                            android:background="@drawable/bg_utility_button"
                            android:elevation="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Example Word Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF9E6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Example illustration -->
                    <ImageView
                        android:id="@+id/imgExample"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_zoo"
                        android:padding="12dp"
                        android:background="@drawable/bg_tool_button"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvExampleWord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A - Apple"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to hear"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnPlayExample"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_speaker"
                        android:background="@drawable/bg_utility_button"
                        android:padding="14dp"
                        android:contentDescription="Play example"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Success Message (Hidden initially) -->
            <LinearLayout
                android:id="@+id/layoutSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:background="@drawable/bg_card_white"
                android:elevation="8dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_check_letter"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ Perfect! ðŸŽ‰"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Great handwriting!"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="56dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="8dp">

        <!-- Progress Dots -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <View
                android:id="@+id/dot1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_progress_dot_active"/>

            <View
                android:id="@+id/dot2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_progress_dot_inactive"/>

            <View
                android:id="@+id/dot3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_progress_dot_inactive"/>

            <View
                android:id="@+id/dot4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_progress_dot_inactive"/>
        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnPrevLetter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_prev"
                android:background="@drawable/bg_tool_button"
                android:padding="12dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Previous letter"/>

            <Button
                android:id="@+id/btnNextLetter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="Next Letter"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_next_button"
                android:elevation="4dp"/>

            <ImageButton
                android:id="@+id/btnNextLetterIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_next"
                android:background="@drawable/bg_tool_button"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                android:contentDescription="Next letter"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:menu="@menu/bottom_navigation_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
