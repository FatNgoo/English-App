<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Decorative elements (stars, clouds) -->
    <ImageView
        android:id="@+id/decorLeft"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_star_small"
        android:alpha="0.6"
        android:contentDescription="@string/app_name"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/decorRight"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_cloud"
        android:alpha="0.4"
        android:contentDescription="@string/app_name"
        tools:ignore="HardcodedText" />

    <!-- Main Node Container -->
    <LinearLayout
        android:id="@+id/nodeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Node Circle -->
        <FrameLayout
            android:id="@+id/nodeFrame"
            android:layout_width="@dimen/saga_node_size"
            android:layout_height="@dimen/saga_node_size">

            <!-- Background (changes based on state) -->
            <View
                android:id="@+id/nodeBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_node_locked" />

            <!-- Icon -->
            <ImageView
                android:id="@+id/nodeIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_book_star"
                android:contentDescription="@string/app_name"
                tools:ignore="HardcodedText" />

            <!-- Lock Icon (visible only when locked) -->
            <ImageView
                android:id="@+id/lockIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_lock_small"
                android:visibility="gone"
                android:contentDescription="@string/app_name"
                tools:ignore="HardcodedText" />

        </FrameLayout>

        <!-- Node Label -->
        <TextView
            android:id="@+id/nodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Vocabulary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Path Line (connects to next node) -->
    <View
        android:id="@+id/pathLine"
        android:layout_width="4dp"
        android:layout_height="@dimen/saga_spacing_between_nodes"
        android:layout_below="@id/nodeContainer"
        android:layout_centerHorizontal="true"
        android:background="@color/saga_path_line"
        android:visibility="visible" />

</RelativeLayout>
