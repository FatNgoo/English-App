<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <!-- Main Content with Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Top Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <!-- Greeting Section -->
                <LinearLayout
                    android:id="@+id/greetingLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/avatarCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/greetingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/hello_explorer"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/lets_learn_today"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Avatar Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/avatarCard"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/avatarImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/profile_avatar"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_avatar_kid" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Main Feature Banner -->
            <androidx.cardview.widget.CardView
                android:id="@+id/heroBanner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/banner_gradient_start"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <!-- Banner Background Illustration -->
                    <ImageView
                        android:id="@+id/bannerIllustration"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:alpha="0.3"
                        android:contentDescription="@string/banner_illustration"
                        android:src="@drawable/ic_book_star"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Banner Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/bannerIllustration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/bannerTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/todays_lesson"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bannerSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/animals_and_food"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/continueLearningBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@android:color/white"
                            android:text="@string/continue_learning"
                            android:textAllCaps="false"
                            android:textColor="@color/primary_purple"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_play"
                            app:iconTint="@color/primary_purple" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Progress Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/your_progress"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/learning_progress"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/progressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65%"
                            android:textColor="@color/primary_purple"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/learningProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:max="100"
                        android:progress="65"
                        android:progressDrawable="@drawable/progress_bar_rounded"
                        android:progressTint="@color/primary_purple" />

                    <!-- Skills Icons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Vocabulary -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:contentDescription="@string/vocabulary"
                                android:padding="8dp"
                                android:src="@drawable/ic_vocabulary"
                                app:tint="@color/pastel_purple" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/vocabulary"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Listening -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:contentDescription="@string/listening"
                                android:padding="8dp"
                                android:src="@drawable/ic_listening"
                                app:tint="@color/pastel_pink" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/listening"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Speaking -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:contentDescription="@string/speaking"
                                android:padding="8dp"
                                android:src="@drawable/ic_speaking"
                                app:tint="@color/pastel_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/speaking"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Grammar -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:contentDescription="@string/grammar"
                                android:padding="8dp"
                                android:src="@drawable/ic_grammar"
                                app:tint="@color/pastel_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/grammar"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Access Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/quick_access"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Master Chef Features Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Academy Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAcademy"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFE6F0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_book"
                            android:contentDescription="Academy"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ“ Academy"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FF6B9D"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Learn Food"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Master Chef Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMasterChef"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMasterChefClick"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFF3E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_chef_hat"
                            android:contentDescription="Master Chef"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¨â€ðŸ³ Master Chef"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FF8C00"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cook &amp; Learn"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Feature Grid 3x2 -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:columnCount="3"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- Saga Map -->
                <include
                    layout="@layout/item_feature_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1" />

                <!-- Master Chef -->
                <include
                    layout="@layout/item_feature_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1" />

                <!-- Flashcards -->
                <include
                    layout="@layout/item_feature_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1" />

                <!-- Mini Quiz -->
                <include
                    layout="@layout/item_feature_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1" />

                <!-- Story Mode -->
                <include
                    layout="@layout/item_feature_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1" />

                <!-- Pronunciation -->
                <include
                    layout="@layout/item_feature_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1" />
            </GridLayout>

            <!-- Recommended Lessons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/recommended_lessons"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Horizontal Scroll for Lesson Cards -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Lesson Card 1: Animals -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/lessonImage1"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@color/lesson_bg_1"
                                android:contentDescription="@string/animals_lesson"
                                android:padding="16dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_animals"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/lessonImage1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/animals_beginner"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/tag_beginner"
                                    android:paddingStart="8dp"
                                    android:paddingTop="2dp"
                                    android:paddingEnd="8dp"
                                    android:paddingBottom="2dp"
                                    android:text="@string/beginner"
                                    android:textColor="@color/tag_beginner_text"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Lesson Card 2: Colors -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/lessonImage2"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@color/lesson_bg_2"
                                android:contentDescription="@string/colors_lesson"
                                android:padding="16dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_colors"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/lessonImage2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/colors_shapes"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/tag_beginner"
                                    android:paddingStart="8dp"
                                    android:paddingTop="2dp"
                                    android:paddingEnd="8dp"
                                    android:paddingBottom="2dp"
                                    android:text="@string/beginner"
                                    android:textColor="@color/tag_beginner_text"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Lesson Card 3: Conversations -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="160dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/lessonImage3"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@color/lesson_bg_3"
                                android:contentDescription="@string/conversations_lesson"
                                android:padding="16dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_conversation"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/lessonImage3">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/daily_conversations"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/tag_intermediate"
                                    android:paddingStart="8dp"
                                    android:paddingTop="2dp"
                                    android:paddingEnd="8dp"
                                    android:paddingBottom="2dp"
                                    android:text="@string/intermediate"
                                    android:textColor="@color/tag_intermediate_text"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
