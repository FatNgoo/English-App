<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Victory/Defeat Banner -->
        <FrameLayout
            android:id="@+id/resultBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <!-- Victory Banner -->
            <LinearLayout
                android:id="@+id/victoryBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_trophy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="â­ VICTORY! â­"
                    android:textSize="42sp"
                    android:textColor="#FFD93D"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="You won the battle!"
                    android:textSize="18sp"
                    android:textColor="#757575"/>

            </LinearLayout>

            <!-- Defeat Banner -->
            <LinearLayout
                android:id="@+id/defeatBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’”"
                    android:textSize="80sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="DEFEAT"
                    android:textSize="42sp"
                    android:textColor="#BA68C8"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Better luck next time!"
                    android:textSize="18sp"
                    android:textColor="#757575"/>

            </LinearLayout>

        </FrameLayout>

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Final Score -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final Score"
                    android:textSize="18sp"
                    android:textColor="#757575"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:id="@+id/playerScoreDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgPlayerFinalAvatar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_avatar_girl"
                            android:background="@drawable/bg_avatar_circle"/>

                        <TextView
                            android:id="@+id/txtPlayerFinalScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="7"
                            android:textSize="48sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="â€”"
                        android:textSize="48sp"
                        android:textColor="#212121"/>

                    <LinearLayout
                        android:id="@+id/opponentScoreDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtOpponentFinalScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="5"
                            android:textSize="48sp"
                            android:textColor="#2196F3"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/imgOpponentFinalAvatar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_avatar_boy"
                            android:background="@drawable/bg_avatar_circle"/>

                    </LinearLayout>

                </RelativeLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="#E0E0E0"/>

                <!-- Accuracy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_check"
                        android:tint="#4CAF50"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Accuracy"
                        android:textSize="16sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/txtAccuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textSize="24sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"/>

                </LinearLayout>

                <!-- XP Gained -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star"
                        android:tint="#FFD93D"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="XP Gained"
                        android:textSize="16sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/txtXPGained"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+150 XP"
                        android:textSize="24sp"
                        android:textColor="#FFD93D"
                        android:textStyle="bold"/>

                </LinearLayout>

                <!-- Rank Change -->
                <LinearLayout
                    android:id="@+id/rankChangeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_ranking"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Rank Change"
                        android:textSize="16sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/txtRankChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â†‘ Bronze â†’ Silver"
                        android:textSize="18sp"
                        android:textColor="#FF6B6B"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Opponent Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgOpponentRecapAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_avatar_boy"
                    android:background="@drawable/bg_avatar_circle"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtOpponentRecapName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tom"
                        android:textSize="20sp"
                        android:textColor="#212121"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtOpponentRecapLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Level 18 â€¢ Silver Tier"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <!-- Play Again Button -->
            <FrameLayout
                android:id="@+id/btnPlayAgain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_play_again_button"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_refresh"
                        android:tint="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/play_again"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>

                </LinearLayout>

            </FrameLayout>

            <!-- Return to Arena Button -->
            <FrameLayout
                android:id="@+id/btnReturnArena"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_answer_choice"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Return to Arena"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:textStyle="bold"/>

            </FrameLayout>

            <!-- Share Result Button -->
            <FrameLayout
                android:id="@+id/btnShareResult"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_button_secondary"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_share"
                        android:tint="#757575"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Share Result"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:textStyle="bold"/>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <!-- Bottom Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </LinearLayout>

</ScrollView>
