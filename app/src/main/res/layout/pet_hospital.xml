<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F5">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_reading_tool"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/back"
                    android:scaleType="centerInside"
                    android:padding="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pet_hospital"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B9D"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_body_parts"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_stethoscope"
                    android:contentDescription="@string/stethoscope_icon"
                    android:scaleType="centerInside"
                    android:padding="8dp"/>

            </RelativeLayout>

            <!-- Main Content Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:weightSum="10">

                <!-- Left Column: Pet Display + Instruction -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <!-- Pet Patient Display -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/petCard"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="8dp"
                        android:background="@drawable/bg_pet_card">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">

                            <!-- Pet Image with Highlight Zones -->
                            <FrameLayout
                                android:id="@+id/petContainer"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/imgPet"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_dog_sick"
                                    android:contentDescription="@string/sick_pet"
                                    android:scaleType="fitCenter"/>

                                <!-- Body Part Highlight Zones (Hidden by default) -->
                                <View
                                    android:id="@+id/highlightHead"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center_horizontal|top"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/bg_body_part_highlight"
                                    android:visibility="invisible"/>

                                <View
                                    android:id="@+id/highlightPaw"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="start|bottom"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/bg_body_part_highlight"
                                    android:visibility="invisible"/>

                                <View
                                    android:id="@+id/highlightEar"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="start|top"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/bg_body_part_highlight"
                                    android:visibility="invisible"/>

                                <View
                                    android:id="@+id/highlightTummy"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="40dp"
                                    android:background="@drawable/bg_body_part_highlight"
                                    android:visibility="invisible"/>

                                <!-- Sparkles Effect -->
                                <ImageView
                                    android:id="@+id/imgSparkles"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_sparkles"
                                    android:contentDescription="@string/sparkles"
                                    android:visibility="invisible"
                                    android:alpha="0"/>

                            </FrameLayout>

                            <!-- Condition Label -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/bg_speech_bubble"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/txtCondition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dog_fever"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#FF6B6B"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Instruction Panel -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- Play Instruction Button -->
                            <FrameLayout
                                android:id="@+id/btnPlayInstruction"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/bg_instruction_button"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_speaker"
                                    android:contentDescription="@string/play_instruction"/>

                            </FrameLayout>

                            <!-- Instruction Text -->
                            <TextView
                                android:id="@+id/txtInstruction"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/instruction_placeholder"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:lineSpacingExtra="4dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Right Column: Health Checklist + Mood Meter -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <!-- Mood Meter -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imgMoodIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_health_heart"
                                android:contentDescription="@string/mood_meter"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pet_mood"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:layout_marginBottom="8dp"/>

                            <!-- Mood Progress Bar -->
                            <ProgressBar
                                android:id="@+id/moodProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                android:progressDrawable="@drawable/bg_mood_meter"
                                android:progress="30"
                                android:max="100"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Health Checklist -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:background="@drawable/bg_health_checklist">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/treatment_steps"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:layout_marginBottom="12dp"/>

                            <!-- Checklist Item 1 -->
                            <LinearLayout
                                android:id="@+id/checklistItem1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/healthCheckbox1"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/bg_checkbox_empty"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/txtHealthCheck1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/check_temperature"
                                    android:textSize="11sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                            <!-- Checklist Item 2 -->
                            <LinearLayout
                                android:id="@+id/checklistItem2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/healthCheckbox2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/bg_checkbox_empty"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/txtHealthCheck2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/check_clean_wound"
                                    android:textSize="11sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                            <!-- Checklist Item 3 -->
                            <LinearLayout
                                android:id="@+id/checklistItem3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/healthCheckbox3"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/bg_checkbox_empty"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/txtHealthCheck3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/check_vitamins"
                                    android:textSize="11sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                            <!-- Checklist Item 4 -->
                            <LinearLayout
                                android:id="@+id/checklistItem4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/healthCheckbox4"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/bg_checkbox_empty"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/txtHealthCheck4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/check_bandage"
                                    android:textSize="11sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Treatment Tools Tray -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medical_tools"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="4"
                        android:rowCount="2">

                        <!-- Thermometer -->
                        <FrameLayout
                            android:id="@+id/toolThermometer"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_tool_button">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_thermometer"
                                android:contentDescription="@string/thermometer"/>

                        </FrameLayout>

                        <!-- Bandage -->
                        <FrameLayout
                            android:id="@+id/toolBandage"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_tool_button">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bandage"
                                android:contentDescription="@string/bandage"/>

                        </FrameLayout>

                        <!-- Medicine -->
                        <FrameLayout
                            android:id="@+id/toolMedicine"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_tool_button">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_medicine_bottle"
                                android:contentDescription="@string/medicine"/>

                        </FrameLayout>

                        <!-- Eye Drops -->
                        <FrameLayout
                            android:id="@+id/toolEyeDrops"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_tool_button">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_eye_drops"
                                android:contentDescription="@string/eye_drops"/>

                        </FrameLayout>

                        <!-- Cotton Swab -->
                        <FrameLayout
                            android:id="@+id/toolCotton"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_tool_button">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_cotton_swab"
                                android:contentDescription="@string/cotton_swab"/>

                        </FrameLayout>

                        <!-- Ice Pack -->
                        <FrameLayout
                            android:id="@+id/toolIcePack"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_tool_button">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_ice_pack"
                                android:contentDescription="@string/ice_pack"/>

                        </FrameLayout>

                        <!-- Stethoscope -->
                        <FrameLayout
                            android:id="@+id/toolStethoscope"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_tool_button">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_stethoscope"
                                android:contentDescription="@string/stethoscope"/>

                        </FrameLayout>

                        <!-- Syringe -->
                        <FrameLayout
                            android:id="@+id/toolSyringe"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_tool_button">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_syringe"
                                android:contentDescription="@string/syringe"/>

                        </FrameLayout>

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Completion Popup (Hidden by default) -->
    <FrameLayout
        android:id="@+id/completionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0FFFFFF"
        android:visibility="invisible"
        android:clickable="true"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp"
            android:background="@drawable/bg_completion_vet_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Happy Pet Icon -->
                <ImageView
                    android:id="@+id/imgHappyPet"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ic_happy_pet"
                    android:contentDescription="@string/happy_pet"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/great_job_doctor"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pet_healthy_again"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- Rewards Display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star"
                            android:contentDescription="@string/xp_reward"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/xp_reward_value"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FFD93D"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_doctor_hat"
                            android:contentDescription="@string/sticker_reward"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sticker_unlocked"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#95C8F0"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnNextPatient"
                    android:layout_width="220dp"
                    android:layout_height="56dp"
                    android:text="@string/next_patient"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_completion_vet_card"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:elevation="16dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
