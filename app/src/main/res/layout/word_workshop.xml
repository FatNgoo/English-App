<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/primary_yellow">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back"
                    android:background="@drawable/bg_tool_button"
                    android:padding="12dp"
                    android:contentDescription="Back button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Word Workshop"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_hammer"
                    android:padding="8dp"
                    android:background="@drawable/bg_tool_button"/>
            </RelativeLayout>

            <!-- Task Description Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF9E6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spell the word below!"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"/>

                    <!-- Image placeholder (CAT, APPLE, etc.) -->
                    <ImageView
                        android:id="@+id/imgWordTarget"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_robot_happy"
                        android:scaleType="centerInside"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/tvDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficulty: Easy"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/bg_reward_bar"
                        android:padding="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Word Target Area (Blank Slots) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ Drop letters here âœ¨"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/layoutLetterSlots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Letter Slot 1 -->
                    <FrameLayout
                        android:id="@+id/slot1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_letter_slot">

                        <TextView
                            android:id="@+id/tvSlot1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </FrameLayout>

                    <!-- Letter Slot 2 -->
                    <FrameLayout
                        android:id="@+id/slot2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_letter_slot">

                        <TextView
                            android:id="@+id/tvSlot2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </FrameLayout>

                    <!-- Letter Slot 3 -->
                    <FrameLayout
                        android:id="@+id/slot3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_letter_slot">

                        <TextView
                            android:id="@+id/tvSlot3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Hint Tools -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/btnHintTool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_lightbulb"
                        android:padding="12dp"
                        android:background="@drawable/bg_hint_button"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Hint"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnShuffleTool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_shuffle"
                        android:padding="12dp"
                        android:background="@drawable/bg_hint_button"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Shuffle"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSoundTool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_sound"
                        android:padding="12dp"
                        android:background="@drawable/bg_hint_button"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Sound"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Reward Bar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_reward_bar">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_star"/>

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_star"/>

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_star_empty"/>
            </LinearLayout>

            <!-- Drag-and-Drop Letter Blocks Area -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"
                android:text="Drag letters from here:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <GridLayout
                android:id="@+id/layoutLetterBlocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:columnCount="4"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- Letter Block C -->
                <TextView
                    android:id="@+id/letterC"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="C"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_letter_block_yellow"
                    android:elevation="4dp"/>

                <!-- Letter Block A -->
                <TextView
                    android:id="@+id/letterA"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="A"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_letter_block_pink"
                    android:elevation="4dp"/>

                <!-- Letter Block T -->
                <TextView
                    android:id="@+id/letterT"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="T"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_letter_block_blue"
                    android:elevation="4dp"/>

                <!-- Letter Block S -->
                <TextView
                    android:id="@+id/letterS"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="S"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_letter_block_green"
                    android:elevation="4dp"/>

                <!-- Letter Block O -->
                <TextView
                    android:id="@+id/letterO"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="O"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_letter_block_purple"
                    android:elevation="4dp"/>

                <!-- Letter Block N -->
                <TextView
                    android:id="@+id/letterN"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="N"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_letter_block_yellow"
                    android:elevation="4dp"/>
            </GridLayout>

            <!-- Success Message (Hidden initially) -->
            <LinearLayout
                android:id="@+id/layoutSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:background="@drawable/bg_card_white"
                android:elevation="8dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_confetti"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ Great Job! ðŸŽ‰"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You spelled it correctly!"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/btnNextWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Word"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_primary"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:menu="@menu/bottom_navigation_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
