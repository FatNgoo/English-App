<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F5">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_reading_tool"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/back"
                    android:scaleType="centerInside"
                    android:padding="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/master_chef"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B9D"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_food_numbers"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chef_hat"
                    android:contentDescription="@string/chef_icon"
                    android:scaleType="centerInside"
                    android:padding="8dp"/>

            </RelativeLayout>

            <!-- Currency Display Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Energy Display -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bg_currency_display"
                    android:padding="8dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lightning"
                        android:contentDescription="Energy"/>

                    <TextView
                        android:id="@+id/txtEnergyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

                <!-- Gold Display -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bg_currency_display"
                    android:padding="8dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_coin"
                        android:contentDescription="Gold"/>

                    <TextView
                        android:id="@+id/txtGoldCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFB300"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

                <!-- Level Display -->
                <TextView
                    android:id="@+id/txtLevel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lvl 1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B9D"
                    android:gravity="center"
                    android:background="@drawable/bg_currency_display"
                    android:padding="8dp"
                    android:layout_margin="4dp"/>

            </LinearLayout>

            <!-- Star Rating Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_star"
                    android:contentDescription="@string/star_1"
                    android:layout_margin="4dp"/>

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_star"
                    android:contentDescription="@string/star_2"
                    android:layout_margin="4dp"/>

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_star_empty"
                    android:contentDescription="@string/star_3"
                    android:layout_margin="4dp"/>

            </LinearLayout>

            <!-- Order Listening Panel -->
            <androidx.cardview.widget.CardView
                android:id="@+id/orderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:background="@drawable/bg_order_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- Customer Avatar -->
                    <ImageView
                        android:id="@+id/imgCustomerAvatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_cat"
                        android:contentDescription="@string/customer_avatar"
                        android:layout_marginBottom="16dp"/>

                    <!-- Play Order Button -->
                    <FrameLayout
                        android:id="@+id/btnPlayOrder"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/bg_play_order_button"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imgSpeaker"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_speaker"
                                android:contentDescription="@string/play_order"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/play_order"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FF6B9D"/>

                        </LinearLayout>

                        <!-- Waveform Animation (Hidden initially) -->
                        <LinearLayout
                            android:id="@+id/waveformContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:visibility="invisible">

                            <ImageView
                                android:id="@+id/wave1"
                                android:layout_width="16dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_waveform"
                                android:layout_margin="4dp"
                                android:contentDescription="@string/waveform"/>

                            <ImageView
                                android:id="@+id/wave2"
                                android:layout_width="16dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_waveform"
                                android:layout_margin="4dp"
                                android:contentDescription="@string/waveform"/>

                            <ImageView
                                android:id="@+id/wave3"
                                android:layout_width="16dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_waveform"
                                android:layout_margin="4dp"
                                android:contentDescription="@string/waveform"/>

                        </LinearLayout>

                    </FrameLayout>

                    <!-- Order Subtitle -->
                    <TextView
                        android:id="@+id/txtOrderSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_placeholder"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_speech_bubble"
                        android:visibility="invisible"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Main Content with Cooking Station and Checklist -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:weightSum="10">

                <!-- Cooking Station -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cookingStationCard"
                    android:layout_width="0dp"
                    android:layout_height="400dp"
                    android:layout_weight="7"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    android:background="@drawable/bg_cooking_station">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <!-- Stove Top Left -->
                        <FrameLayout
                            android:id="@+id/stoveArea"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="40dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_stove"
                                android:contentDescription="@string/stove"
                                android:scaleType="fitCenter"/>

                            <ImageView
                                android:id="@+id/imgFryingPan"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_frying_pan"
                                android:contentDescription="@string/frying_pan"
                                android:scaleType="fitCenter"/>

                            <!-- Steam Effect -->
                            <ImageView
                                android:id="@+id/imgSteam"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center|top"
                                android:src="@drawable/ic_steam"
                                android:contentDescription="@string/steam"
                                android:visibility="invisible"
                                android:alpha="0.7"/>

                        </FrameLayout>

                        <!-- Cutting Board Top Right -->
                        <FrameLayout
                            android:id="@+id/cuttingBoardArea"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_cutting_board"
                                android:contentDescription="@string/cutting_board"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>

                        <!-- Toaster Bottom Right -->
                        <FrameLayout
                            android:id="@+id/toasterArea"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="40dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_toaster"
                                android:contentDescription="@string/toaster"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>

                        <!-- Serving Plate Bottom Center -->
                        <FrameLayout
                            android:id="@+id/plateArea"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_plate"
                                android:contentDescription="@string/plate"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>

                        <!-- Smoke Effect (for overcooking) -->
                        <ImageView
                            android:id="@+id/imgSmoke"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_smoke"
                            android:contentDescription="@string/smoke"
                            android:visibility="invisible"
                            android:alpha="0.8"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Order Checklist -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="400dp"
                    android:layout_weight="3"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:background="@drawable/bg_checklist_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_checklist"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="16dp"/>

                        <!-- Checklist Item 1 -->
                        <LinearLayout
                            android:id="@+id/checklistItem1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <View
                                android:id="@+id/checkbox1"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/bg_checkbox_empty"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:id="@+id/txtCheckItem1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/check_eggs"
                                android:textSize="12sp"
                                android:textColor="#666666"/>

                        </LinearLayout>

                        <!-- Checklist Item 2 -->
                        <LinearLayout
                            android:id="@+id/checklistItem2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <View
                                android:id="@+id/checkbox2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/bg_checkbox_empty"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:id="@+id/txtCheckItem2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/check_sandwich"
                                android:textSize="12sp"
                                android:textColor="#666666"/>

                        </LinearLayout>

                        <!-- Checklist Item 3 -->
                        <LinearLayout
                            android:id="@+id/checklistItem3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:id="@+id/checkbox3"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/bg_checkbox_empty"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:id="@+id/txtCheckItem3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/check_juice"
                                android:textSize="12sp"
                                android:textColor="#666666"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Ingredient Tray -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ingredients"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="4"
                        android:rowCount="2">

                        <!-- Egg -->
                        <FrameLayout
                            android:id="@+id/ingredientEgg"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_ingredient_item">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_egg"
                                android:contentDescription="@string/egg"/>

                        </FrameLayout>

                        <!-- Bread -->
                        <FrameLayout
                            android:id="@+id/ingredientBread"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_ingredient_item">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bread"
                                android:contentDescription="@string/bread"/>

                        </FrameLayout>

                        <!-- Cheese -->
                        <FrameLayout
                            android:id="@+id/ingredientCheese"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_ingredient_item">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_cheese"
                                android:contentDescription="@string/cheese"/>

                        </FrameLayout>

                        <!-- Bacon -->
                        <FrameLayout
                            android:id="@+id/ingredientBacon"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_ingredient_item">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bacon"
                                android:contentDescription="@string/bacon"/>

                        </FrameLayout>

                        <!-- Fruit -->
                        <FrameLayout
                            android:id="@+id/ingredientFruit"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_ingredient_item">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_fruit"
                                android:contentDescription="@string/fruit"/>

                        </FrameLayout>

                        <!-- Vegetables -->
                        <FrameLayout
                            android:id="@+id/ingredientVegetables"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_ingredient_item">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_vegetables"
                                android:contentDescription="@string/vegetables"/>

                        </FrameLayout>

                        <!-- Juice Box -->
                        <FrameLayout
                            android:id="@+id/ingredientJuice"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_ingredient_item">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_juice_box"
                                android:contentDescription="@string/juice"/>

                        </FrameLayout>

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Hint Tools (Floating) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnHint"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_reading_tool"
            android:src="@drawable/ic_lightbulb"
            android:contentDescription="@string/hint"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <ImageButton
            android:id="@+id/btnReplayAudio"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_reading_tool"
            android:src="@drawable/ic_replay"
            android:contentDescription="@string/replay_audio"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <ImageButton
            android:id="@+id/btnSlowMode"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_reading_tool"
            android:src="@drawable/ic_slow_mode"
            android:contentDescription="@string/slow_mode"
            android:scaleType="centerInside"
            android:padding="12dp"/>

    </LinearLayout>

    <!-- Completion Popup (Hidden by default) -->
    <FrameLayout
        android:id="@+id/completionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0FFFFFF"
        android:visibility="invisible"
        android:clickable="true"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            android:background="@drawable/bg_completion_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgConfettiCompletion"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_confetti"
                    android:contentDescription="@string/confetti"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/great_job_chef"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_completed"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- Rewards Display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_coin"
                        android:contentDescription="Gold"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/txtRewardGold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+100 Gold"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFB300"
                        android:layout_marginEnd="24dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star"
                        android:contentDescription="Stars"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/txtRewardStars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Stars"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnNextOrder"
                    android:layout_width="200dp"
                    android:layout_height="56dp"
                    android:text="@string/next_order"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_completion_card"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Locked Overlay -->
    <androidx.cardview.widget.CardView
        android:id="@+id/lockedOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="#E6FFFFFF"
        app:cardElevation="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_lock"
                android:contentDescription="Locked"
                android:alpha="0.5"/>

            <TextView
                android:id="@+id/txtLockedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's learn Food &amp; Drinks first! ðŸ“š"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:textAlignment="center"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete the Food &amp; Drinks lesson to unlock Master Chef mode!"
                android:textSize="14sp"
                android:textColor="#999999"
                android:textAlignment="center"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnGoToAcademy"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Go to Academy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_primary"
                android:paddingHorizontal="32dp"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:elevation="16dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
