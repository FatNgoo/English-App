<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F5">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_reading_tool"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/back"
                    android:scaleType="centerInside"
                    android:padding="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/robot_factory"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#95C8F0"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/txtLevelTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_logic"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_gear"
                    android:contentDescription="@string/gear_icon"
                    android:scaleType="centerInside"
                    android:padding="8dp"/>

            </RelativeLayout>

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtCurrentLevel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/level_3_turn_left"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <!-- Dot Progress Indicator -->
                <LinearLayout
                    android:id="@+id/dotProgressContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_run_button"/>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_run_button"/>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_run_button"/>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_maze_wall"/>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_maze_wall"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Main Content Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:weightSum="10">

                <!-- Left Side: Maze + Sequence Panel -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <!-- Maze Display Area -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_maze_grid">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <!-- Maze Grid (6x6) -->
                            <GridLayout
                                android:id="@+id/mazeGrid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:rowCount="6"
                                android:columnCount="6"
                                android:layout_gravity="center">

                                <!-- Maze tiles will be dynamically added -->

                            </GridLayout>

                            <!-- Robot Character (positioned dynamically) -->
                            <ImageView
                                android:id="@+id/imgRobot"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_robot_idle"
                                android:contentDescription="@string/robot"
                                android:elevation="4dp"/>

                            <!-- Goal Flag (positioned dynamically) -->
                            <ImageView
                                android:id="@+id/imgGoalFlag"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_goal_flag"
                                android:contentDescription="@string/goal_flag"
                                android:elevation="2dp"/>

                            <!-- Sparkles Effect -->
                            <ImageView
                                android:id="@+id/imgSparkles"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_robot_sparkles"
                                android:contentDescription="@string/sparkles"
                                android:visibility="invisible"
                                android:alpha="0"
                                android:elevation="6dp"/>

                            <!-- Wrong Icon -->
                            <ImageView
                                android:id="@+id/imgWrong"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_wrong"
                                android:contentDescription="@string/wrong"
                                android:visibility="invisible"
                                android:alpha="0"
                                android:elevation="6dp"/>

                            <!-- Ghost Path Overlay (Hint) -->
                            <View
                                android:id="@+id/ghostPath1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/bg_ghost_path"
                                android:visibility="invisible"
                                android:alpha="0.5"/>

                            <View
                                android:id="@+id/ghostPath2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/bg_ghost_path"
                                android:visibility="invisible"
                                android:alpha="0.5"/>

                            <View
                                android:id="@+id/ghostPath3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/bg_ghost_path"
                                android:visibility="invisible"
                                android:alpha="0.5"/>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Command Sequence Panel -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp"
                        android:background="@drawable/bg_sequence_panel">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/command_sequence"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:layout_marginBottom="12dp"/>

                            <!-- Horizontal Scrollable Sequence -->
                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/sequenceContainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="100dp"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:minWidth="600dp">

                                    <!-- Command slots (dynamically added) -->
                                    <!-- Empty slot example -->
                                    <FrameLayout
                                        android:id="@+id/commandSlot1"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_margin="6dp"
                                        android:background="@drawable/bg_command_slot">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="1"
                                            android:textSize="24sp"
                                            android:textColor="#BDBDBD"
                                            android:textStyle="bold"/>

                                    </FrameLayout>

                                    <FrameLayout
                                        android:id="@+id/commandSlot2"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_margin="6dp"
                                        android:background="@drawable/bg_command_slot">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="2"
                                            android:textSize="24sp"
                                            android:textColor="#BDBDBD"
                                            android:textStyle="bold"/>

                                    </FrameLayout>

                                    <FrameLayout
                                        android:id="@+id/commandSlot3"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_margin="6dp"
                                        android:background="@drawable/bg_command_slot">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="3"
                                            android:textSize="24sp"
                                            android:textColor="#BDBDBD"
                                            android:textStyle="bold"/>

                                    </FrameLayout>

                                    <FrameLayout
                                        android:id="@+id/commandSlot4"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_margin="6dp"
                                        android:background="@drawable/bg_command_slot">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="4"
                                            android:textSize="24sp"
                                            android:textColor="#BDBDBD"
                                            android:textStyle="bold"/>

                                    </FrameLayout>

                                    <FrameLayout
                                        android:id="@+id/commandSlot5"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_margin="6dp"
                                        android:background="@drawable/bg_command_slot">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="5"
                                            android:textSize="24sp"
                                            android:textColor="#BDBDBD"
                                            android:textStyle="bold"/>

                                    </FrameLayout>

                                    <FrameLayout
                                        android:id="@+id/commandSlot6"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_margin="6dp"
                                        android:background="@drawable/bg_command_slot">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="6"
                                            android:textSize="24sp"
                                            android:textColor="#BDBDBD"
                                            android:textStyle="bold"/>

                                    </FrameLayout>

                                </LinearLayout>

                            </HorizontalScrollView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Right Side: Vocabulary Helper + Toolbox -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <!-- Vocabulary Helper Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_vocab_card">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_compass"
                                android:contentDescription="@string/compass"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/directions"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:layout_marginBottom="8dp"/>

                            <!-- Direction Buttons -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnVocabForward"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:text="@string/forward"
                                    android:textSize="11sp"
                                    android:textAllCaps="false"
                                    android:background="@drawable/bg_command_forward"
                                    android:layout_marginBottom="6dp"/>

                                <Button
                                    android:id="@+id/btnVocabLeft"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:text="@string/turn_left"
                                    android:textSize="11sp"
                                    android:textAllCaps="false"
                                    android:background="@drawable/bg_command_left"
                                    android:layout_marginBottom="6dp"/>

                                <Button
                                    android:id="@+id/btnVocabRight"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:text="@string/turn_right"
                                    android:textSize="11sp"
                                    android:textAllCaps="false"
                                    android:background="@drawable/bg_command_right"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Command Toolbox -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:background="@drawable/bg_toolbox">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/commands"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:layout_marginBottom="12dp"/>

                            <!-- Forward Command Block -->
                            <FrameLayout
                                android:id="@+id/toolForward"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/bg_command_forward">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="start|center_vertical"
                                    android:layout_marginStart="12dp"
                                    android:src="@drawable/ic_arrow_forward"
                                    android:contentDescription="@string/forward"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/forward"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#333333"/>

                            </FrameLayout>

                            <!-- Turn Left Command Block -->
                            <FrameLayout
                                android:id="@+id/toolTurnLeft"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/bg_command_left">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="start|center_vertical"
                                    android:layout_marginStart="12dp"
                                    android:src="@drawable/ic_turn_left"
                                    android:contentDescription="@string/turn_left"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/turn_left"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#333333"/>

                            </FrameLayout>

                            <!-- Turn Right Command Block -->
                            <FrameLayout
                                android:id="@+id/toolTurnRight"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/bg_command_right">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="start|center_vertical"
                                    android:layout_marginStart="12dp"
                                    android:src="@drawable/ic_turn_right"
                                    android:contentDescription="@string/turn_right"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/turn_right"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#333333"/>

                            </FrameLayout>

                            <!-- Loop Command Block -->
                            <FrameLayout
                                android:id="@+id/toolLoop"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:background="@drawable/bg_command_loop">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="start|center_vertical"
                                    android:layout_marginStart="12dp"
                                    android:src="@drawable/ic_loop"
                                    android:contentDescription="@string/loop"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/loop_x2"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#333333"/>

                            </FrameLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Play Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Run Button -->
                <FrameLayout
                    android:id="@+id/btnRun"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_run_button">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_play"
                            android:contentDescription="@string/run"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/run"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                    </LinearLayout>

                </FrameLayout>

                <!-- Reset Button -->
                <FrameLayout
                    android:id="@+id/btnReset"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_reset_button">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_reset"
                        android:contentDescription="@string/reset"/>

                </FrameLayout>

                <!-- Step Button -->
                <FrameLayout
                    android:id="@+id/btnStep"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_step_button">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_step"
                        android:contentDescription="@string/step"/>

                </FrameLayout>

            </LinearLayout>

            <!-- Challenge Mode Info (Optional) -->
            <LinearLayout
                android:id="@+id/challengeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">

                <!-- Timer Bubble -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_timer_bubble"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_timer"
                        android:contentDescription="@string/timer"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/txtTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1:30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

                <!-- Bonus Coins -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_coin"
                        android:contentDescription="@string/coins"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/txtBonusCoins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFD93D"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Hint Button -->
    <FrameLayout
        android:id="@+id/btnHint"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_lightbulb"
        android:elevation="12dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lightbulb"
            android:contentDescription="@string/hint"/>

    </FrameLayout>

    <!-- Completion Overlay (Hidden by default) -->
    <FrameLayout
        android:id="@+id/completionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0FFFFFF"
        android:visibility="invisible"
        android:clickable="true"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp"
            android:background="@drawable/bg_completion_robot">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Robot Celebration -->
                <ImageView
                    android:id="@+id/imgCelebrationRobot"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/ic_robot_idle"
                    android:contentDescription="@string/robot"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maze_escaped"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/well_programmed"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- Rewards Display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_star"
                            android:contentDescription="@string/xp_reward"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/xp_reward_robot"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FFD93D"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/perfectBadgeContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_perfect_badge"
                            android:contentDescription="@string/perfect_badge"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/perfect_route"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnNextLevel"
                    android:layout_width="220dp"
                    android:layout_height="56dp"
                    android:text="@string/next_level"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_completion_robot"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:elevation="16dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
